<?xml version="1.0" encoding="utf-8"?>
<!-- Material You dynamic colors for Android 12+ dark mode -->
<resources>
    <!-- Launcher icon background -->
    <color name="ic_launcher_background">@android:color/system_accent1_300</color>

    <!-- Widget colors use system dynamic colors in dark mode -->
    <color name="widget_background">@android:color/transparent</color>
    <color name="widget_button_primary">@android:color/system_accent1_200</color>
    <color name="widget_button_primary_text">@android:color/system_accent1_900</color>
    <color name="widget_button_secondary">@android:color/system_accent1_200</color>
    <color name="widget_button_secondary_text">@android:color/system_accent1_900</color>

    <!-- Launcher icon foreground colors -->
    <color name="icon_foreground_primary">@android:color/system_neutral1_0</color>
    <color name="icon_foreground_secondary">@android:color/system_neutral1_900</color>
    <color name="icon_foreground_stroke">@android:color/system_neutral1_900</color>
    <color name="icon_monochrome">@android:color/system_neutral1_0</color>
</resources>
